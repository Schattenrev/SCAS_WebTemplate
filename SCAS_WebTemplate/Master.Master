<body>

    <header id="pageHeader" class="navbar navbar-expand-lg navbar-dark header-primarycolor text-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <!-- <img src="images/SE-logo-Life-is-On-png.png" width="150px" height="50px" alt="">  -->
                <img src="Media/Images/SE_Lightmode.png" id="SE-Lightmode" width="150" height="50" class="d-inline-block align-top" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link actives" aria-current="page" href="Home.aspx">Home</a>
